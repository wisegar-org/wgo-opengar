<!-- ======= Contact Section ======= -->
<section id="contact" class="contact section-bg">
       <div data-aos="fade-up">
              <iframe style="border:0; width: 100%; height: 350px;" src="{{contact.mapPath}}" frameborder="0"
                     allowfullscreen></iframe>
       </div>

       <div class="container" data-aos="fade-up">

              <div class="row mt-5">

                     <div class="col-lg-4">
                            <div class="info php-email-form2">
                                   <div class="address">
                                          <i class="bi bi-geo-alt"></i>
                                          <h4>Indirizzo:</h4>
                                          {{#if (notNullOrUndefined contact.address)}}
                                          <p>{{contact.address}}</p>
                                          {{/if}}
                                          {{#if (isNullOrUndefined contact.address)}}
                                          <p>Assemblea Genitori di Vezia,
                                                 c/o Scuole Elementari Vezia,
                                                 Via S. Gottardo 30,
                                                 6943 Vezia</p>
                                          {{/if}}
                                   </div>

                                   <div class="email">
                                          <i class="bi bi-envelope"></i>
                                          <h4>Email:</h4>
                                          {{#if (notNullOrUndefined contact.email)}}
                                          <p>{{contact.email}}</p>
                                          {{/if}}
                                          {{#if (isNullOrUndefined contact.email)}}
                                          <p>assembleagenitorivezia@gmail.com</p>
                                          {{/if}}
                                   </div>
                                   <div class="phone">
                                          <i class="bi bi-phone"></i>
                                          <h4>Chiama:</h4>
                                          {{#if (notNullOrUndefined contact.phoneNumber)}}
                                          <p>{{contact.phoneNumber}}</p>
                                          {{/if}}
                                          {{#if (isNullOrUndefined contact.phoneNumber)}}
                                          <p>+1 5589 55488 55s</p>
                                          {{/if}}
                                   </div>

                            </div>

                     </div>

                     <div class="col-lg-8 mt-5 mt-lg-0">

                            <form id="contattoForm" action="/hb/contatto/sendMessage" method="post" role="form"
                                   class="php-email-form2">
                                   <div class="row">
                                          <div class="col-md-6 form-group">
                                                 <input type="text" name="nome" class="form-control" id="nameFContatto"
                                                        placeholder="Nome" required>
                                          </div>
                                          <div class="col-md-6 form-group mt-3 mt-md-0">
                                                 <input type="text" class="form-control" name="cognome"
                                                        id="lastNameFContatto" placeholder="Cognome" required>
                                          </div>
                                   </div>

                                   <div class="row">
                                          <div class="col-md-6 form-group mt-3 mt-md-0">
                                                 <input type="email" class="form-control" name="email"
                                                        id="emailFContatto" placeholder="Indirizzo email" required>
                                          </div>
                                          <div class="col-md-6 form-group mt-3 mt-md-0">
                                                 <input type="tel" class="form-control" name="phone" id="phoneFContatto"
                                                        placeholder="Telefono" required>
                                          </div>
                                   </div>
                                   <div class="form-group mt-3 mt-md-0">
                                          <textarea class="form-control" name="message" rows="5" placeholder="Messaggio"
                                                 id="messageFContatto" required></textarea>
                                   </div>
                                   <div class="my-3">
                                          <div class="loading">Loading</div>
                                          <div class="error-message"></div>
                                          <div class="sent-message">Your message has been sent. Thank you!</div>
                                   </div>
                                   <div class="text-center"><button id="contattoFormButton" type="submit">Invia</button>
                                   </div>
                            </form>

                     </div>

              </div>

       </div>
</section><!-- End Contact Section -->